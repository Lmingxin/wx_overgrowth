/* components/epsoide/index.wxss */
.container{
  display: flex;
  height: 60rpx;
}
.index-container{
  display: flex;
  /* 保证文字底部对齐 */
  align-items: baseline;
}
.plain{
  font-size: 32rpx;
  line-height: 32rpx;
}
.index{
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
  font-family: Cambria,  Times, 'Times New Roman', serif;
}
.line{
  height: 44rpx;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
  border-left: 1rpx solid #333333;
}
.date-container{
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}
.month{
  font-size: 24rpx;
  line-height: 24rpx;
}
.year{
  font-size: 20rpx;
}